<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>
<VBox fx:controller="client.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center" >
            <HBox fx:id="authorizationPanel" visible="true" managed="true">
                <TextField fx:id="loginField" HBox.hgrow="ALWAYS" promptText="login" />
                <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS" promptText="password"/>
                <Button text="Sign in" onAction="#authorization" alignment="BOTTOM_RIGHT" minWidth="62"/>
            </HBox>
            <TextArea fx:id="conversation" VBox.vgrow="ALWAYS" prefWidth="200" prefHeight="300" wrapText="true"/>
            <HBox fx:id="speakPane" visible="false" managed="false">
                <TextField fx:id="textMassage" HBox.hgrow="ALWAYS" prefWidth="200" onAction="#click"/>
                <Button text="Send"  onAction="#click" alignment="BOTTOM_RIGHT"/>
            </HBox>
</VBox>

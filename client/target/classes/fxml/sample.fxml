<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ListView?>
<VBox fx:controller="client.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center" >
            <HBox fx:id="authorizationPanel" visible="true" managed="true">
                <TextField fx:id="loginField" HBox.hgrow="ALWAYS" promptText="login" />
                <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS" promptText="password"/>
                <Button text="Sign in" onAction="#authorization" minWidth="62"/>
                <Button text="Sign up" onAction="#registration" minWidth="62"/>

            </HBox>
            <HBox VBox.vgrow="ALWAYS">
                <TextArea fx:id="conversation" HBox.hgrow="ALWAYS" wrapText="true"/>
                <ListView fx:id="listUsers" visible="false" managed="false" minWidth="100"
                          onMouseReleased="#clickUser"/>
            </HBox>
            <HBox fx:id="speakPane" visible="false" managed="false">
                <TextField fx:id="textMassage" HBox.hgrow="ALWAYS" onAction="#click"/>
                <Button text="Send"  onAction="#click" alignment="BOTTOM_RIGHT"/>
            </HBox>
</VBox>
